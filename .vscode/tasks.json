{
    "tasks": [
        {
            "type": "shell",
            "command": "npm run build:dev",
            "label": "npm run build:dev"
		},
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe build test VJSON",
			"command": "g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${workspaceFolder}/test/test.cc",
				"${workspaceFolder}/src/vjson/*.cc",
				"${workspaceFolder}/src/virtual_mem/*.cc",
				"${workspaceFolder}/src/stream.cc",
				"${workspaceFolder}/src/text_stream.cc",
				"-o",
				"${workspaceFolder}/test/output/vjson.out"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/g++.exe"
		}
    ],
    "version": "2.0.0"
}
