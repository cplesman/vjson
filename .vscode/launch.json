    "version": "0.2.0",
    "configurations": [
        {
            "name": "test",
            "program": "${workspaceFolder}/test/test.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "C++ Launch VJSON test",
            "type": "cppdbg",
            "cwd" : "${workspaceFolder}/test/output/",
            "request": "launch",
            "program": "${workspaceFolder}/test/output/vjson.out",
            "environment": [{ "name": "config", "value": "Debug" }],
            "stopAtEntry": false,
            "preLaunchTask": "C/C++: g++.exe build test VJSON"
        }

    ]
}